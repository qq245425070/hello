<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingLeft="@dimen/left_margin"
    android:paddingRight="@dimen/left_margin"
    android:paddingTop="@dimen/top_margin"
    android:paddingBottom="@dimen/top_margin"
    android:background="@color/gray_bg"
    >
    <TextView
        android:id="@+id/title_tv"
        style="@style/recommend_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/image1_iv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/abcd"
            android:scaleType="fitXY"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/image2_iv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/abcd"
            android:scaleType="fitXY"
            android:layout_marginLeft="6dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/image3_iv"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:src="@mipmap/abcd"
            android:layout_marginLeft="6dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:id="@+id/read_count_tv"
        style="@style/recommend_gray_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>