<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E5E8EA"
    >
    <include layout="@layout/common_head_layout"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBottom="@+id/head_ll_head"
        android:background="@android:color/transparent"/>
    <LinearLayout
        android:id="@+id/news_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#ffffff"
        android:gravity="center"
        >
        <EditText
            android:id="@+id/news_et_content"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/news_edit_bg"
            android:hint="输入您想发送的内容"
            android:imeActionLabel="发送"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:maxLength="50"
            android:paddingLeft="@dimen/common_dimens_8"
            android:textColor="@color/text_color_101010"
            android:textColorHint="#919191"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/send_msg_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="发送"
            android:textColor="@color/theme_green"
            android:background="@drawable/commen_button_light_green"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <cn.gietv.mlive.views.MsgListView
        android:id="@+id/news_list_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:divider="@null"
        android:layout_above="@+id/news_ll_bottom">
    </cn.gietv.mlive.views.MsgListView>
</RelativeLayout>
