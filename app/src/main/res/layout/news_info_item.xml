<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E5E8EA"
    >
    <LinearLayout
        android:id="@+id/new_item_right_parent"
        android:gravity="right|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/common_dimens_16"
        android:paddingBottom="@dimen/common_dimens_16"
        android:paddingLeft="@dimen/common_dimens_20"
        android:paddingRight="@dimen/common_dimens_20"
        >
    <TextView
        android:id="@+id/news_message_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="13"
        android:textSize="@dimen/common_text_28"
        android:background="@drawable/balloon_r"
        android:gravity="center_vertical"
        android:lineSpacingExtra="6dp"
        />
      <!--  android:background="@drawable/balloon_r"-->
    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/new_item_iv_avatar_right"
        android:layout_width="@dimen/common_dimens_80"
        android:layout_height="@dimen/common_dimens_80"
        android:scaleType="fitXY"
        app:siBorderColor="#BBBBBB"
        app:siBorderWidth="0dp"
        app:siRadius="100dp"
        app:siSquare="true"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/new_item_left_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/common_dimens_16"
        android:paddingBottom="@dimen/common_dimens_16"
        android:paddingLeft="@dimen/common_dimens_20"
        android:paddingRight="@dimen/common_dimens_20"
        android:gravity="center_vertical"
        >
        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/new_item_iv_avatar"
            android:layout_width="@dimen/common_dimens_80"
            android:layout_height="@dimen/common_dimens_80"
            android:scaleType="fitXY"
            app:siBorderColor="#BBBBBB"
            app:siBorderWidth="0dp"
            app:siRadius="100dp"
            app:siSquare="true"/>
        <TextView
            android:id="@+id/news_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/common_text_28"
            android:maxEms="13"
            android:textColor="@color/text_color_101010"
            android:gravity="center_vertical"
            android:background="@drawable/balloon_l"
            android:lineSpacingExtra="6dp"
            />
    </LinearLayout>
</LinearLayout>
