<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/theme_iv_green"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="8dp"
        android:src="@color/theme_green"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/theme_iv_blue"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="8dp"
        android:src="@color/theme_blue"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/theme_iv_red"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="8dp"
        android:src="@color/theme_red"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/theme_iv_orange"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="8dp"
        android:src="@color/theme_orange"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/theme_iv_yellow"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="8dp"
        android:src="@color/theme_yellow"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/theme_iv_purple"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@color/theme_purple"/>
</LinearLayout>