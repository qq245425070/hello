<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/video_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_101010"
        android:textSize="16sp"
        android:padding="@dimen/dp_10"
        />
    <cn.gietv.mlive.views.SquareImageView2
        android:id="@+id/video_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />
    <LinearLayout
        android:id="@+id/video_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/video_image"
        android:padding="@dimen/dp_10"
        >
        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/author_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:scaleType="fitXY"
            app:siRadius="100dp"
            app:siSquare="true"
            />
        <TextView
            android:id="@+id/author_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_101010"
            android:paddingLeft="@dimen/dp_10"
            />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/comment_icon"
            android:layout_marginRight="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/commen_count"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_929292"
            android:paddingLeft="6dp"
            />
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/sanjiaoxing"
            />
        <TextView
            android:id="@+id/play_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_929292"
            android:layout_marginLeft="6dp"
            />
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_content"
        android:scrollbars="none"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        >
        <LinearLayout
            android:id="@+id/tag_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            >
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line_dcdcdc"
        android:layout_below="@+id/scrollView"
        />
</RelativeLayout>