<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/search_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8"
        android:gravity="center"
        android:background="@color/theme_green"
        >
        <ImageView
            android:id="@+id/search_tv_search"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/download_white"
            android:padding="@dimen/dp_4"
            android:layout_alignParentRight="true"
            />
        <EditText
            android:paddingLeft="30dp"
            android:id="@+id/search_et_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:textColor="@color/text_color_101010"
            android:hint="搜索游戏、主播和视频"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:inputType="text"
            android:textColorHint="@color/bbbdbf"
            android:background="@drawable/shape_input_bg"
            android:textSize="14dp"
            android:layout_toLeftOf="@+id/search_tv_search"
            android:textCursorDrawable="@drawable/edittext_cursor"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/sousuo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>
    <cn.gietv.mlive.views.slidingTab.SlidingTabLayout
        android:id="@+id/tab_indicator"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@android:color/white"
        app:shouldExpand="true"
        app:indicatorColor="#4fc396"
        app:tabBackground2="@layout/sliding_tab_view"
        app:tabBackgroundTextViewId="@+id/tab_textview"></cn.gietv.mlive.views.slidingTab.SlidingTabLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_d9dcdf"
        android:layout_below="@+id/tab_indicator"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </android.support.v4.view.ViewPager>
</LinearLayout>