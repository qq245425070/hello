<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:padding="10dp"
    >
    <cn.gietv.mlive.views.SquareImageView2
        android:id="@+id/game_iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:siRadius="0dp"
        />
    <TextView
        android:id="@+id/video_name"
        android:layout_below="@+id/game_iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="@color/text_color_101010"
        />
    <TextView
        android:id="@+id/anchor_name"
        android:layout_below="@+id/video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:textColor="#929292"
        />
    <TextView
        android:id="@+id/video_count"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/anchor_name"
        android:textColor="#929292"
        />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_toLeftOf="@+id/video_count"
        android:src="@drawable/sanjiaoxing"
        android:layout_alignBottom="@+id/anchor_name"
        android:layout_marginRight="10dp"
        android:paddingBottom="5dp"
        />

</RelativeLayout>