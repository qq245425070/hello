<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_marginTop="-3dp"
    >

    <TextView
        android:id="@+id/game_info_tv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/common_dimens_30"
        android:paddingBottom="@dimen/common_dimens_30"
        android:paddingLeft="@dimen/common_dimens_16"
        android:textColor="@color/text_color_101010"
        android:textSize="14sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <cn.gietv.mlive.views.SquareImageView
            android:id="@+id/game_info_iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/image_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/common_dimens_8"
            android:src="@mipmap/icon_live"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/common_dimens_30"
        android:paddingBottom="@dimen/common_dimens_30"
        android:paddingLeft="@dimen/common_dimens_16"
        android:paddingRight="@dimen/common_dimens_16"
        >

        <TextView
            android:id="@+id/game_info_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_101010"
            android:textSize="14dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/common_dimens_10"
            >

            <TextView
                android:id="@+id/game_info_tv_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="14dp"/>

            <ImageView
                android:id="@+id/live_count"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@mipmap/program_play_count_icon"
                />
            <TextView
                android:id="@+id/game_info_tv_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:paddingLeft="@dimen/common_dimens_8"
                android:textColor="#999999"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/game_info_tv_attention_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/program_follow_count_icon"
                android:drawablePadding="3dp"
                android:textColor="#999999"
                android:textSize="14dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>