<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       >
   <com.jcodecraeer.xrecyclerview.XRecyclerView
       android:id="@+id/listView"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:dividerHeight="0dip"
       android:listSelector="@android:color/transparent"
       android:divider="@color/transparent"
       ></com.jcodecraeer.xrecyclerview.XRecyclerView>
    <TextView
        android:id="@+id/sofa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快来抢沙发"
        android:textSize="20sp"
        android:textColor="@color/text_color_333333"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
   </RelativeLayout>
    <LinearLayout
        android:id="@+id/video_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:fitsSystemWindows="true"
        >

        <EditText
            android:id="@+id/video_et_content"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/news_edit_bg"
            android:hint="添加评论"
            android:imeActionLabel="发送"
            android:imeOptions="actionSend|flagNoFullscreen"
            android:inputType="text"
            android:maxLength="50"
            android:paddingLeft="@dimen/common_dimens_8"
            android:textColor="@color/text_color_101010"
            android:textColorHint="#BBBBBB"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/send_msg_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="发送"
            android:textColor="@color/theme_green"
            android:background="@drawable/commen_button_light_green"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            />
        <ImageButton
            android:id="@+id/video_btn_send"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/lubo_send"
            android:paddingLeft="@dimen/common_dimens_16"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>