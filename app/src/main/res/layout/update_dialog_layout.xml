<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="@dimen/common_dimens_8">

    <TextView
        android:id="@+id/update_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_update"
        android:drawablePadding="16dp"
        android:paddingTop="@dimen/common_dimens_8"
        android:textColor="@color/text_color_101010"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/update_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/common_dimens_8"
        android:paddingTop="@dimen/common_dimens_8"
        android:textColor="#666666"
        android:textSize="14dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/update_tv_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_dimens_8"
            android:layout_marginRight="@dimen/common_dimens_8"
            android:layout_marginTop="@dimen/common_dimens_8"
            android:layout_weight="1"
            android:background="@drawable/commen_button_green_long"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="更新"
            android:textColor="#ffffff"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/update_tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_dimens_8"
            android:layout_marginRight="@dimen/common_dimens_8"
            android:layout_marginTop="@dimen/common_dimens_8"
            android:layout_weight="1"
            android:background="@drawable/commen_button_green_long"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="16dp"/>
    </LinearLayout>
</LinearLayout>