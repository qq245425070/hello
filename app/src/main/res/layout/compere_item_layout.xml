<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/user_center_tv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_dimens_8"
        android:textColor="@color/text_color_101010"
        android:background="#FFFFFF"
        android:textSize="14dp"/>

    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cn.gietv.mlive.views.SquareImageView
            android:id="@+id/user_center_iv_game_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/image_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/common_dimens_8"
            android:src="@mipmap/icon_live"
            android:visibility="visible"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="@dimen/common_dimens_8">

        <TextView
            android:id="@+id/user_center_tv_game_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_101010"
            android:textSize="14dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_center_list_tv_game_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="14dp"
                android:text="aaaaaaaaaaa"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                >
                <ImageView
                    android:id="@+id/smal_iv"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/live_count"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="2dp"
                    />
            <TextView
                android:id="@+id/user_center_list_tv_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_dimens_8"
                android:layout_marginLeft="@dimen/common_dimens_30"
                android:textColor="#999999"
                android:text="12122"
                android:gravity="bottom"
                android:textSize="14sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/user_center_list_tv_attention_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/program_follow_count_icon"
                android:drawablePadding="3dp"
                android:textColor="#999999"
                android:textSize="10dp"
                android:visibility="gone"
                />
        </LinearLayout>

    </LinearLayout>

  <!--  <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#5A6166"/>
-->
</LinearLayout>