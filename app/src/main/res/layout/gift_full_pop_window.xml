<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#DD536269"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="5dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/user_gift"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:paddingTop="3dp"
            android:layout_marginTop="8dp"
            />
            <TextView
                android:id="@+id/recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#FFFFFF"
                android:text="充值金角"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/commen_button_theme_color_white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            >
            <ImageView
                android:id="@+id/gift_img_01"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <TextView
                android:id="@+id/gift_name_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/gift_num_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f7f71e"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            >
            <ImageView
                android:id="@+id/gift_img_02"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <TextView
                android:id="@+id/gift_name_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/gift_num_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f7f71e"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                >
                <ImageView
                    android:id="@+id/gift_img_03"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    />
                <TextView
                    android:id="@+id/gift_name_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    />
                <TextView
                    android:id="@+id/gift_num_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f7f71e"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                >
                <ImageView
                    android:id="@+id/gift_img_04"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    />
                <TextView
                    android:id="@+id/gift_name_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    />
                <TextView
                    android:id="@+id/gift_num_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f7f71e"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                >
                <ImageView
                    android:id="@+id/gift_img_05"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    />
                <TextView
                    android:id="@+id/gift_name_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    />
                <TextView
                    android:id="@+id/gift_num_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f7f71e"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:id="@+id/gift_img_06"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    />
                <TextView
                    android:id="@+id/gift_name_06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    />
                <TextView
                    android:id="@+id/gift_num_06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f7f71e"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
