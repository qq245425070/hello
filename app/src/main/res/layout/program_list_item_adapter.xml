<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cn.gietv.mlive.views.SquareImageView
            android:id="@+id/program_list_iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/image_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_margin="@dimen/common_dimens_8"
            android:src="@mipmap/icon_live"
            android:visibility="gone"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/common_dimens_30"
        android:paddingBottom="@dimen/common_dimens_30"
        android:paddingLeft="@dimen/common_dimens_16"
        android:paddingRight="@dimen/common_dimens_16"
        >

        <TextView
            android:id="@+id/program_tv_game_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_101010"
            android:textSize="14dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/program_list_tv_game_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="2dp"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="12dp"/>
            <ImageView
                android:id="@+id/live_count"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:background="@mipmap/program_play_count_icon"
                />
            <TextView
                android:id="@+id/program_list_tv_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="@dimen/common_dimens_8"
                android:layout_marginTop="-3dp"
                android:textColor="#999999"
                android:text="44"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/program_list_tv_attention_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/program_follow_count_icon"
                android:drawablePadding="3dp"
                android:textColor="#999999"
                android:textSize="14dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>