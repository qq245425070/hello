<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include layout="@layout/common_head_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/common_dimens_16">

    <LinearLayout
        android:id="@+id/username_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:paddingRight="20dp"
            android:textSize="18sp"
            android:textColor="#666666"

            />
        <EditText
            android:id="@+id/login_et_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:focusableInTouchMode="true"
            android:hint="手机号或用户名"
            android:inputType="text"
            android:textSize="14sp"
            android:maxLength="20"
            android:singleLine="true"
            android:background="@drawable/commen_button_theme_color"
            android:paddingLeft="30dp"
            android:textCursorDrawable="@drawable/edittext_cursor"
            />
    </LinearLayout>
       <!-- android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:paddingRight="20dp"
                android:textSize="18sp"
                android:textColor="#666666"
                />
        <EditText
            android:id="@+id/login_et_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:focusableInTouchMode="true"
            android:hint="请输入密码"
            android:textSize="14dp"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:background="@drawable/commen_button_theme_color"
            android:paddingLeft="30dp"
            android:textCursorDrawable="@drawable/edittext_cursor"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/commen_button_green_long"
            android:gravity="center"
            android:padding="@dimen/common_dimens_16"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/login_tv_regist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="注册"
                android:textColor="@color/theme_green"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/login_tv_find_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="忘记密码"
                android:textColor="@color/theme_green"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/common_dimens_80"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="2"
                android:background="#999999"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他登录方式"
                android:paddingRight="@dimen/common_dimens_20"
                android:paddingLeft="@dimen/common_dimens_20"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="2"
                android:background="#999999"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="@dimen/common_dimens_20"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/common_dimens_12"
                android:text="联合登录:"
                android:textColor="@color/theme_green"
                android:textSize="16dp"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/login_btn_qq"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="center"
                    app:siRadius="6dp"
                    android:src="@mipmap/qq"
                    android:layout_marginRight="5dp"
                    android:textColor="#FFFFFF"/>

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/login_btn_weixin"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/weixin_login"
                    android:scaleType="center"
                    android:layout_marginRight="5dp"
                    app:siRadius="6dp"
                    android:textColor="#FFFFFF"/>

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/login_btn_weibo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/sina"
                    android:scaleType="center"
                    android:visibility="visible"
                    app:siRadius="6dp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>