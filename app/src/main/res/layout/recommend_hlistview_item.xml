<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_dimens_16"
    android:paddingBottom="@dimen/common_dimens_46"
    >

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/recommend_iv_compere"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        app:siBorderColor="#BBBBBB"
        app:siBorderWidth="2px"
        app:siRadius="6dp"
        app:siSquare="true"/>

    <TextView
        android:id="@+id/recommend_tv_compere_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:textColor="@color/text_color_101010"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/recommend_tv_compere_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#666666"
        android:textSize="14dp"/>
</LinearLayout>