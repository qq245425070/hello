<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/common_dimens_30"
        android:paddingBottom="@dimen/common_dimens_30"
        android:paddingLeft="@dimen/common_dimens_20"
        android:paddingRight="@dimen/common_dimens_30"
        android:gravity="center"
        >

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/compere_list_iv_image"
            android:layout_width="@dimen/common_dimens_80"
            android:layout_height="@dimen/common_dimens_80"
            android:scaleType="fitXY"
            app:siBorderColor="#BBBBBB"
            app:siBorderWidth="1px"
            app:siRadius="6dp"
            app:siSquare="true"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/common_dimens_34">

            <TextView
                android:id="@+id/compere_list_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/compere_list_tv_attentionCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="12dp"/>
        </LinearLayout>

            <TextView
                android:id="@+id/compere_list_adapter_iv_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_text_28"
                android:text="关注"
                android:textColor="@color/text_color_101010"
                android:background="@drawable/commen_button_theme_color8"
                android:paddingBottom="8dp"
                android:paddingRight="24dp"
                android:paddingLeft="24dp"
                android:paddingTop="8dp"
                />

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_d9dcdf"
        android:layout_marginLeft="67dp"
        />
</LinearLayout>