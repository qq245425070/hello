<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    >

    <com.github.siyamed.shapeimageview.RoundedImageView
    android:id="@+id/new_item_iv_avatar"
    android:layout_width="@dimen/common_dimens_80"
    android:layout_height="@dimen/common_dimens_80"
    android:scaleType="fitXY"
    app:siBorderColor="#BBBBBB"
    app:siBorderWidth="0dp"
    app:siRadius="6dp"
    app:siSquare="true"/>
    <TextView
        android:id="@+id/news_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_text_28"
        android:text="厚德载物"
        android:gravity="center"
        android:singleLine="true"
        android:background="@drawable/balloon_l"
        />
</LinearLayout>
