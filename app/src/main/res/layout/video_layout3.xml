<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/video_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:gravity="center"
    >

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        />
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
    <FrameLayout
        android:id="@+id/danmu_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/head_ib_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="36dp"
            android:paddingRight="35dp"
            android:paddingBottom="24dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/navigation_button_normal"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/jubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="36dp"
            android:paddingRight="35dp"
            android:paddingBottom="24dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/navigation_button_normal"
            android:layout_alignParentRight="true"
            android:visibility="visible"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:id="@+id/seekBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:descendantFocusability="afterDescendants"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >

            <ImageView
                android:id="@+id/play"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/videoplay"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/currenttime"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/play"
                android:textColor="#FFF"
                android:text="00:00:00"
                android:gravity="center"
                />

            <SeekBar
                android:id="@+id/seekbar"
                style="@style/MediaController_SeekBar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:max="1000"
                />


            <TextView
                android:id="@+id/totaltime"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:layout_marginRight="10dp"
                android:text="00:00:00"
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/full_screen"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/full_screen"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/danmu_switch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/danmu_screen"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/send_danmu_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#50000000"
            >
            <EditText
                android:id="@+id/danmu_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/shape_input_bg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="6dp"
                android:imeOptions="actionSend"
                android:textSize="14sp"
                android:hint="输入弹幕内容"
                android:textCursorDrawable="@drawable/edittext_cursor"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>