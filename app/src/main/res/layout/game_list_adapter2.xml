<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/game_iv_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        app:siBorderColor="#BBBBBB"
        app:siBorderWidth="0dp"
        app:siRadius="100dp"
        app:siSquare="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/game_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_101010"
        android:layout_alignTop="@+id/game_iv_image"
        android:layout_toRightOf="@+id/game_iv_image"
        android:text="猫和老鼠"
        />
    <TextView
        android:id="@+id/game_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游戏类型"
        android:layout_toRightOf="@+id/game_iv_image"
        android:layout_below="@+id/game_tv_name"
        android:textColor="#929292"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        />
    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_type"
        android:numStars="5"
        android:layout_toRightOf="@+id/game_iv_image"
        android:layout_marginTop="6dp"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_alignBottom="@+id/game_iv_image"
        android:rating="5"
        />
    <TextView
        android:id="@+id/download_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_929292"
        android:layout_toRightOf="@+id/rating_bar"
        android:layout_alignTop="@+id/rating_bar"
        android:layout_marginLeft="10dp"
        android:text="0001"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/install_text"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/game_tv_name"
        android:text="安装"
        android:gravity="center"
        android:textColor="@color/theme_green"
        android:background="@drawable/commen_button_light_green"
        android:layout_marginRight="16dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_d9dcdf"
        android:layout_below="@+id/game_iv_image"
        android:layout_marginLeft="86dp"
        />
</RelativeLayout>