<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <include layout="@layout/common_head_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >
        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/game_iv_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            app:siBorderColor="#BBBBBB"
            app:siBorderWidth="0dp"
            app:siRadius="4dp"
            app:siSquare="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/install_text"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:text="安装"
            android:gravity="center"
            android:textColor="@color/theme_green"
            android:background="@drawable/commen_button_light_green"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/game_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_101010"
            android:layout_alignTop="@+id/game_iv_image"
            android:layout_toRightOf="@+id/game_iv_image"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/game_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/game_iv_image"
            android:layout_below="@+id/game_tv_name"
            android:textColor="#929292"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            />
        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_type"
            android:numStars="5"
            android:layout_toRightOf="@+id/game_iv_image"
            android:layout_marginTop="6dp"
            style="?android:attr/ratingBarStyleSmall"
            android:rating="5"
            />
        <TextView
            android:id="@+id/download_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_929292"
            android:layout_toRightOf="@+id/rating_bar"
            android:layout_alignTop="@+id/rating_bar"
            android:layout_marginLeft="10dp"
            android:text="ssss"
            android:textSize="14sp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_d9dcdf"
        />

    <cn.gietv.mlive.views.slidingTab.SlidingTabLayout
        android:id="@+id/tab_indicator"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@android:color/white"
        app:shouldExpand="true"
        app:indicatorColor="#4fc396"
        app:tabBackground2="@layout/sliding_tab_view"
        app:tabBackgroundTextViewId="@+id/tab_textview"></cn.gietv.mlive.views.slidingTab.SlidingTabLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_d9dcdf"
        android:layout_below="@+id/tab_indicator"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>