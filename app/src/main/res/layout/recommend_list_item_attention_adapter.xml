<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/line_f1f1f1"
        android:visibility="visible"
        />
        <TextView
            android:id="@+id/recommend_list_tv_my_attention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_dimens_16"
            android:paddingTop="@dimen/common_dimens_30"
            android:text="猜你喜欢"
            android:textColor="@color/text_color_101010"
            android:textSize="14dp"
            android:paddingBottom="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="#FFF"
            >
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFF"
                >
                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/recommend_list_iv_game_attention"
                    android:layout_width="115dp"
                    android:layout_height="66dp"
                    android:scaleType="fitXY"
                    app:siRadius="4dp"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/image_live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_margin="@dimen/common_dimens_8"
                    android:src="@mipmap/icon_live"
                    android:visibility="gone"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="#FFF"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/recommend_tv_game_name"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:textColor="@color/text_color_101010"
                    android:paddingRight="10dp"
                    android:textSize="14dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:background="#FFF"
                    >
                    <TextView
                        android:id="@+id/recommend_list_tv_game_desc"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:textSize="12dp"/>
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/sanjiaoxing"
                        />
                    <TextView
                        android:id="@+id/recommend_list_tv_play_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/common_dimens_8"
                        android:textColor="#999999"
                        android:paddingLeft="6dp"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/recommend_list_tv_attention_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:visibility="gone"
                        android:textSize="14dp"/>
                </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9dcdf"
            android:layout_marginLeft="134dp"
            />
</LinearLayout>