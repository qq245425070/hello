<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/user_center_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="#4fc396"
        >
    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/user_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="16dp"
        android:src="@mipmap/icon"
        app:siBorderColor="#FFFFFF"
        app:siBorderWidth="0dp"
        app:siRadius="100dp"
        app:siSquare="true"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/nickname_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_color_101010"
        android:layout_below="@+id/user_icon"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="5dp"
        android:text="11212"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/jinjiao_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/nickname_user"
        android:src="@mipmap/jinjiao_icon"
        android:layout_alignBottom="@+id/nickname_user"
        android:layout_marginLeft="20dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/jinjiao_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/jinjiao_icon"
        android:layout_alignBottom="@+id/nickname_user"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_color_101010"
        android:textSize="12sp"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/edit_user_info"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/jinjiao_number"
        android:src="@mipmap/edit_user_info"
        android:layout_alignBottom="@+id/nickname_user"
        android:layout_marginLeft="10dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nickname_user"
        android:layout_alignLeft="@+id/nickname_user"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color_101010"
        android:textSize="12sp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/user_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_icon"
        android:layout_below="@+id/nickname_user"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="12sp"
        />
    <View
        android:id="@+id/line_one"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:background="#999999"
        android:layout_toRightOf="@+id/fans"
        android:layout_below="@+id/nickname_user"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="invisible"

        />
    <TextView
        android:id="@+id/follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nickname_user"
        android:layout_alignBottom="@+id/fans"
        android:layout_toRightOf="@+id/line_one"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color_101010"
        android:textSize="12sp"
        android:visibility="invisible"
        />
    <View
        android:id="@+id/line_two"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:background="#999999"
        android:layout_toRightOf="@+id/follow"
        android:layout_below="@+id/nickname_user"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nickname_user"
        android:layout_alignBottom="@+id/fans"
        android:layout_toRightOf="@+id/line_two"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color_101010"
        android:textSize="12sp"
        android:visibility="invisible"
        />
    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_icon"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/private_news"
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:background="@drawable/commen_button_theme_color_white"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text="私聊"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_60"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/concern"
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:background="@drawable/commen_button_theme_color_white"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text="+ 关注"
            android:textColor="@color/white"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/other_parent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@+id/parent"
        >
        <LinearLayout
            android:id="@+id/commen_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/follow_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
        </LinearLayout>
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/line_f0f0f2"
            android:visibility="invisible"
            />
        <LinearLayout
            android:id="@+id/fans_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/fans_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
        </LinearLayout>
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/line_f0f0f2"
            android:visibility="invisible"
            />
        <LinearLayout
            android:id="@+id/photo_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/photo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相册"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_f0f0f2"
        android:layout_below="@+id/other_parent"
        />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/comment_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginLeft="18dp"
        android:background="#FFFFFF"
        >
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/message_checked"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="他的评论"
            android:textColor="@color/text_color_101010"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:paddingLeft="3dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_right_button"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/zan_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginLeft="18dp"
        android:background="#FFFFFF"
        >
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/commen_nomal"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="他的赞"
            android:textColor="@color/text_color_101010"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:paddingLeft="3dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_right_button"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoucang_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginLeft="18dp"
        android:background="#FFFFFF"
        >
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_shoucang_click"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="他的收藏"
            android:textColor="@color/text_color_101010"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:paddingLeft="3dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_right_button"
            />
    </LinearLayout>
</LinearLayout>