<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    >
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/line_f1f1f1"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="相关专辑"
        android:textColor="@color/text_color_101010"
        android:visibility="gone"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        />
    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_below="@+id/tag"
        android:layout_height="18dp"
        android:visibility="gone"
        />
        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/game_info_iv_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            app:siRadius="0dp"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="18dp"
            android:layout_below="@+id/line3"
            />
            <TextView
                android:id="@+id/album_name"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:textColor="@color/text_color_101010"
                android:layout_toRightOf="@+id/game_info_iv_image"
                android:layout_alignTop="@+id/game_info_iv_image"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="18dp"
                />
            <TextView
                android:id="@+id/video_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/album_name"
                android:layout_alignLeft="@+id/album_name"
                android:textColor="#929292"
                android:textSize="12dp"
                android:layout_marginRight="18dp"
                />
            <TextView
                android:id="@+id/album_anchor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#929292"
                android:layout_toRightOf="@+id/game_info_iv_image"
                android:textSize="12dp"
                android:layout_alignBottom="@+id/game_info_iv_image"
                android:layout_alignLeft="@+id/album_name"
                />
            <TextView
                android:id="@+id/play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#929292"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/album_anchor"
                android:textSize="12sp"
                android:paddingLeft="6dp"
                android:paddingRight="18dp"
                />
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignBottom="@+id/game_info_iv_image"
                android:layout_alignTop="@+id/play_count"
                android:layout_toLeftOf="@+id/play_count"
                android:src="@drawable/sanjiaoxing"
                />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9dcdf"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="110dp"
        android:paddingLeft="18dp"
        />
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9dcdf"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/game_info_iv_image"
        android:paddingLeft="18dp"
        android:visibility="gone"
        />
</RelativeLayout>