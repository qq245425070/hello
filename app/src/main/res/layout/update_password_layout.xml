<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:orientation="vertical">

    <include layout="@layout/common_head_layout"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#5A6166"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/common_dimens_16">

        <EditText
            android:id="@+id/update_pwd_et_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/edittext_cursor"
            />

        <EditText
            android:id="@+id/update_pwd_et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/edittext_cursor"
            />


        <EditText
            android:id="@+id/update_pwd_et_new_password_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/edittext_cursor"
            />

        <TextView
            android:id="@+id/update_pwd_et_btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/commen_button_green_long"
            android:gravity="center"
            android:padding="@dimen/common_dimens_16"
            android:text="修改"
            android:textColor="#ffffff"
            android:textSize="16dp"/>
    </LinearLayout>
</LinearLayout>