<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/common_dimens_30"
        android:paddingBottom="@dimen/common_dimens_30"
        android:paddingLeft="@dimen/common_dimens_20"
        android:paddingRight="@dimen/common_dimens_16"
        >

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/game_iv_image"
            android:layout_width="@dimen/common_dimens_80"
            android:layout_height="@dimen/common_dimens_80"
            android:scaleType="fitXY"
            app:siBorderColor="#BBBBBB"
            app:siBorderWidth="0dp"
            app:siRadius="6dp"
            app:siSquare="true"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/common_dimens_34"
            >

            <TextView
                android:id="@+id/game_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:singleLine="true"
                android:textColor="#101010"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/game_tv_desc"
                android:paddingTop="@dimen/common_dimens_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:singleLine="true"
                android:textColor="#919191"
                android:textSize="12dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/common_dimens_30"
            android:src="@mipmap/icon_right_button"/>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_d9dcdf"
        android:layout_marginLeft="65dp"
        />
</LinearLayout>