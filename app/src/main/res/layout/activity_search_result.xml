<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/search_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_dimens_8"
        android:gravity="center"
        android:background="@color/theme_green"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >


        <TextView
            android:id="@+id/search_tv_search"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="@dimen/common_dimens_16"
            android:paddingTop="4dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            />
        <EditText
            android:paddingLeft="30dp"
            android:id="@+id/search_et_text"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_dimens_8"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:textColor="@color/text_color_101010"
            android:hint="搜索游戏、主播和视频"
            android:imeOptions="actionSearch"
            android:textColorHint="@color/bbbdbf"
            android:background="@drawable/shape_input_bg"
            android:textSize="14dp"
            android:layout_toLeftOf="@+id/search_tv_search"
            android:textCursorDrawable="@drawable/edittext_cursor"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/sousuo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />

    </RelativeLayout>



    <cn.gietv.mlive.views.PagerTab
        android:id="@+id/tab_indicator"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#FFFFFF"
        >
    </cn.gietv.mlive.views.PagerTab>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_d9dcdf"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        />
</LinearLayout>