<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    >
    <TextView
        android:id="@+id/video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:paddingBottom="20dp"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:id="@+id/sanjiao"
        android:layout_width="12dp"
        android:layout_height="14dp"
        android:layout_below="@+id/video_name"
        android:src="@drawable/sanjiaoxing"
        android:layout_alignLeft="@+id/video_name"
        android:layout_marginTop="4dp"
        />
    <TextView
        android:id="@+id/video_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#929292"
        android:layout_toRightOf="@+id/sanjiao"
        android:layout_alignBottom="@+id/sanjiao"
        android:layout_below="@+id/video_name"
        android:paddingLeft="6dp"
        android:textSize="14sp"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/download_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/sanjiao"
        android:src="@mipmap/download_image"
        android:layout_marginRight="20dp"
        />
    <ImageView
        android:id="@+id/share_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@+id/download_image"
        android:layout_alignBottom="@+id/sanjiao"
        android:layout_marginRight="16dp"
        android:src="@mipmap/share_image"
        />
    <ImageView
        android:id="@+id/shoucang_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@+id/share_image"
        android:layout_alignBottom="@+id/sanjiao"
        android:layout_marginRight="16dp"
        android:src="@mipmap/shoucang_iamge"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9dcdf"
        android:layout_below="@+id/sanjiao"
        android:layout_marginTop="10dp"
        />

 </RelativeLayout>