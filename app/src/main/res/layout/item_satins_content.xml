<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/top_margin"
    android:layout_marginTop="@dimen/top_margin"
    android:layout_marginRight="@dimen/left_margin"
    android:layout_marginLeft="@dimen/left_margin"
    >
    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/recommend_text"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        >
        <ImageView
            android:id="@+id/zan_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zan_duanzi"
            />
        <TextView
            android:id="@+id/zan_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/recommend_text"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            />
        <ImageView
            android:id="@+id/bishi_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bishi_duanzi"
            />
        <TextView
            android:id="@+id/bishi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/recommend_text"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            />
        <ImageView
            android:id="@+id/share_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fenxiang_duanzi"
            />
        <TextView
            android:id="@+id/share_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/recommend_text"
            android:layout_marginLeft="@dimen/dp_4"
            />
    </LinearLayout>
</LinearLayout>