<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_pop_top"
    android:layout_width="fill_parent"
    android:layout_height="44dp"
    android:background="#00000000"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >
<!--"@drawable/play_title_bkg"-->
    <ImageView
        android:id="@+id/title_back"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:scaleType="centerInside"
        android:padding="@dimen/dp_5"
        android:src="@mipmap/vertical_icon_back" />

    <TextView
        android:id="@+id/tv_detail_play_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="美国队长 3"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="invisible"
        >

        <TextView
            android:id="@+id/cur_vidq"
            android:layout_width="@dimen/vq_width"
            android:layout_height="@dimen/vq_height"
            android:layout_centerVertical="true"
            android:background="@drawable/quality_bkg"
            android:gravity="center"
            android:text="超清"
            android:layout_marginRight="10dp"
            android:textColor="#999999"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/title_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/cur_vidq"
            android:scaleType="centerInside"
            android:src="@drawable/vertical_logo"
            android:visibility="invisible"
            >
        </ImageView>
    </RelativeLayout>

</LinearLayout>